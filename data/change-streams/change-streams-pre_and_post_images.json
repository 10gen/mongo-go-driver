{
            "$set": {
               "keyAltNames": {
                  "$cond": [
                     {
                        "$eq": ["$keyAltNames", [ "keyaltname" ] ]
                     },
                     "$$REMOVE",
                     {
                        "$filter": {
                           "input": "$keyAltNames",
                           "cond": {
                              "$ne": ["$$this", "keyaltname"]
                           }
                        }
                     }
                    ]
               }
            }
         }
